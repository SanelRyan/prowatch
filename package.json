{
  "name": "prowatch",
  "version": "1.0.0",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Sanel Ryan",
  "license": "ISC",
  "description": "Prowatch",
  "devDependencies": {
    "electron": "^34.2.0",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "electron-store": "^8.2.0"
  },
  "build": {
    "appId": "com.sanel.prowatch",
    "productName": "Prowatch",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "msi",
          "arch": ["x64"]
        }
      ],
      "icon": "src/assets/icon.png"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "asar": true,
    "releaseInfo": {
      "releaseNotes": "",
      "releaseDate": ""
    },
    "msi": {
      "oneClick": false,
      "perMachine": true
    }
  }
}
